@model IEnumerable<ToDoRelationships.Models.Category>
@{
    ViewData["Title"] = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>To Do List Categories</h2>
<hr />
<ul>
    @foreach (var item in Model)
    {
        <li>@Html.DisplayFor(modelItem => item.Name)| @Html.ActionLink("Details", "Details", new { id = item.CategoryId }) | @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }) | @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId })</li>
    }
</ul>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
